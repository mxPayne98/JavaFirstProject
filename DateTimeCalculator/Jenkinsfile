#!groovy
pipeline {
    agent {
        docker {
            image 'maven:3.6.3-jdk-11'
            args '-v $HOME/.m2:/root/.m2'
        }
    }
    stages {
        stage('Preparation') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh """
                #!/bin/bash
                cd DateTimeCalculator
                mvn -B -DskipTests clean package
                """
            }
        }
        stage('Test') {
            steps {
                sh """
                #!/bin/bash
                cd DateTimeCalculator
                mvn test
                mvn surefire-report:report-only
                mvn site
                """
            }
        }
    }
}