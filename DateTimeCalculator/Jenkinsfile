#!groovy
pipeline {
    agent {
        docker {
            image 'maven:3.6.3-jdk-11'
            args '-v $HOME/.m2:/root/.m2'
        }
    }
    stages {
        stage('Preparation') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'cd DateTimeCalculator'
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                sh 'cd DateTimeCalculator'
                sh 'mvn test'
                sh 'mvn surefire-report:report-only'
                sh 'mvn site'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
    }
}